.container {
  width: 100vw;
}
.title {
  font-weight: bold;
  margin-top: 30rpx;
}

.scroll-view1 {
  height: 250rpx;
  border: 2px solid;
}

.scroll-view2 {
  height: 400rpx;
  width: 100%;
}

.imgContainer {
  display: flex;
}

.imgContainer image {
  flex: 1 0 auto;
}

.imageMode {
  width: 100%;
  height: 400rpx;
  border: 2px solid;
  margin-bottom: 20rpx;
  background-color: #aaa;
}

.imageMode .mode-title {
  height: 60rpx;
  background-color: #fff;
  font-size: 28rpx;
}

.imageMode image {
  width: 100%;
  height: calc(400rpx - 60rpx);
}

button {
  margin-bottom: 10rpx;
}

.progress {
  padding: 10rpx;
}

/* 设置html字符串内的样式 */
.wrapper {
  width: 600rpx;
  height: 200rpx;
  background-color: lightskyblue;
}
.wrapper .box {
  width: 100rpx;
  height: 100rpx;
  background-color: magenta;
  line-height: 100rpx;
  text-align: center;
}

.wrapper .description {
  font-weight: bold;
  color: #fff;
}