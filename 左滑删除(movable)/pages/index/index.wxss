.container {
  background-color: #222;
  color: #fff;
  height: 100vh;
}
.area {
  width: 500rpx;
  height: 450rpx;
  background-color: #eee;
}
.box {
  width: 100rpx;
  height: 100rpx;
  background-color: #f00;
}

.list-area {
  width: calc(100vw + 150rpx);
  height: 120rpx;
  position: relative;
  left: -150rpx;
}
.list-item {
  width: calc(100% - 150rpx);
  height: 120rpx;
  display: flex;
  position: absolute;
  left: 150rpx;
  background-color: #222;
}

.list-item image {
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx;
  border-radius: 10rpx;
}
.content {
  height: 120rpx;
  padding: 20rpx 0;
  box-sizing: border-box;
  border-bottom: 0.5rpx solid #333;
  flex: 1 0 auto;
}

.nickname {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.msg {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 25rpx;
  color: #aaa;
}
.button-del {
  width: 150rpx;
  height: 118rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 35rpx;
  background-color: #f00;
  float: right;
}